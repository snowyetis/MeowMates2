<!-- <div class="row"> -->
<div class="user-profile">
  <div class="user-display">
    <div class="photo">
      <%= render 'shared/cover', user: current_user %>
    </div>
    <div class="bottom">
      <div class="user-avatar">
        <span class="status"></span>
        <%= render 'shared/avatar', user: current_user %>
      </div>
      <div class="user-info">
        <%= current_user.about %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12 col-md-3 col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div class="col-sm-12 col-md-8 col-lg-7">
    <% cache(action_suffix: "primary") do %>
    <div class="tab-container">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#post" data-toggle="tab" aria-expanded="true">Write a Post</a></li>
        <li class=""><a href="#animals" data-toggle="tab" aria-expanded="false">Post an Animal</a></li>
        <!-- <li class="<%= 'active' if @appprovedClass %>"><% link_to 'Post an Animal', @animal, id: 'animals', remote: true %></li> -->
      </ul>
      <div class="tab-content">
          <div id="post" class="tab-pane cont active">
            <%= render 'posts/form' %>
          </div>
          <div id="animals" class="tab-pane cont">
            <!-- <% render 'animals/adoption_form', locals: @animal %> -->
            <div class="well">
                <div id="adoption_form">
                  <%= render 'animals/form' %>
                </div>
                <!-- <div id="rating_form">
                </div>
                <% link_to 'Go back to Adoption Form', show_adoption_form_path(@animal), id: 'btn_show_adopt', class: 'hide', remote: true %>
                <% link_to 'Go to Rating Form', show_rating_form_path, id: 'btn_show_ratimg', remote: true %> -->
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div id="newsfeed" class="col-sm-12 col-md-12 col-lg-12">
      <ul class="timeline">
          <div id="activities">
            <% if @activities.empty? %>
              <div class="well">
                <%= render('shared/no_resource', resources: 'Activities') %>
              </div>
            <% else %>
                <%= render_activities(@activities, layout: '/shared/activity') %>
            <% end %>
          </div>
      </ul>
      <%= render 'shared/paginate', resources: @activities %>
    </div>
  </div>
