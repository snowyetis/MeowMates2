<div class="row">
  <% if user_signed_in? %>
    <h4>Filter Animals</h4>
    <div class="xs-mb-15">
      <div class="btn-group-justified">
        <a id="image_filter_all" class="btn btn-primary btn-rad1" data-filter="">Show All</a>
        <a id="image_filter_no_image" class="btn btn-default" data-filter="true">Show Animals with Images</a>
      </div>
    </div>
  <% end %>
  <div class="gallery-container">
    <% for animal in @animals %>
      <% if animal.animal_intro_avatar.present? %>
        <div data-filter="<%= @image %>" class="item">
          <div class="photo">
            <div class="img">
              <%= image_tag animal.animal_intro_avatar %>
              <div class="over">
                <div class="func">
                  <a href="#">
                    <i class="icon s7-link"></i>
                  </a>
                  <%= link_to show_gallery_detail_path(animal.id) do %>
                  <i class="icon s7-search" alt="Click to View"></i>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="description">
              <% if user_signed_in? %>
                <div class="icon">
                  <%= render 'likes/form', likeable: current_user %>
                </div>
              <% end %>
              <div class="desc">
                <h5><%= animal.animalName %></h5>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
