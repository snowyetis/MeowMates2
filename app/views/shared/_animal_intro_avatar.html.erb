<% if current_user.blank? %>

  <% if gallery_view %>
    <%= image_tag animal.animal_intro_avatar || 'avatar.jpg', class: 'avatar' %>
  <% end %>

<% else %>

  <% if animal %>
    <%= link_to animal_path(animal) do %>
      <%= image_tag animal.animal_intro_avatar || 'avatar.jpg', class: 'avatar' %>
    <% end %>
  <% end %>
<% end %>
