<% if @gallery_view %>
  <% if animal %>
    <%= image_tag animal.animal_intro_avatar.url(:gallery_thumb), class: 'img-responsive' %>
  <% end %>

<% else %>

  <% if animal %>
    <%= link_to animal_path(animal) do %>
      <%= image_tag animal.animal_intro_avatar || 'avatar.jpg', class: 'avatar' %>
    <% end %>
  <% end %>

<% end %>
