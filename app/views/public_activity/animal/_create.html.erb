<% if activity_resources_exist?(activity) %>
  <div class="activity-animal">
    <div class="info">
      <h4 class="name"><%= link_to activity.owner.name, user_path(activity.owner) %></h4>
    </div>
    <div class="content">
      <div id="post-<%= activity.trackable.id %>" class="activity-post">
        <%= render activity.trackable, remote: true %>
      </div>
    </div>
    <%= render 'shared/created_at', activity: activity %>
  </div>
<% end %>
