<%= render 'shared/cover', user: @user %>
<br>
<div id="user-<%= @user.id %>" class="row">
  <div class="col-sm-12 col-md-3 col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div id="newsfeed" class="col-sm-12 col-md-8 col-lg-8">
    <ul class="timeline">
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
  </ul>
  <%= render 'shared/paginate', resources: @activities %>
</div>
  <!-- <div class="col-lg-3">
  </div> -->
</div>
