<div class="well">
  <!-- <div id="mentionable-data" data-content="<%= mentionable_user_path(current_user) %>"></div> -->
  <%= form_for @animal, html: { class: 'post_form' } do |f| %>
      <h4>Post an Animal for Adoption</h4>
    <div class="form-group">
      <%= f.label :animal_intro_avatar %>
      <br>

      <br>
      <br>
      <%= f.file_field :animal_intro_avatar %>
    </div>
    <div class="form-group">
      <%= f.label "Your Pet's Name" %>
      <%= f.text_field :animalName, class: "editable form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <!-- <%= f.text_field :gender, class: "editable form-control" %> -->
      <%= f.select :gender, options_for_seasons, class: 'form-control', prompt: 'Select One' %>
    </div>
    <div class="form-group">
      <%= f.label "Date of Birth" %>
      <%= f.text_field :dob,  class: "editable form-control" %>
    </div>
    <div class="form-group">
      <div class="am-checkbox">
        <%= f.label :shots %>
        <%= f.check_box :shots %>
      </div>
    </div>
    <div class="form-group">
      <div class="am-checkbox">
        <%= f.label :fixed %>
        <%= f.check_box :fixed %>
      </div>
    </div>
    <div class="form-group">
      <div id="animal-content" contenteditable="true" class="editable form-control input-mentionable" placeholder="Tell Us About your Pet"></div>
      <%= f.hidden_field :content, class: 'form-control input-mentionable', autofocus: true %>
    </div>
    <div id="img-preview" class="form-group hidden">
      <img src="" alt="Preview">
    </div>
    <div class="form-group hidden">
      <%= f.file_field :attachment %>
    </div>
    <div class="form-group">
      <a id="post-attachment" href="javascript:void(0);" class="pull-right btn btn-primary">
        <%= fa_icon 'image' %>
      </a>
      <%= f.submit 'Submit your Pet', class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
