<div class="row">
  <% for animal in @animals %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <%= link_to show_gallery_detail_path(animal), class: "thumbnail" do %>
        <%= image_tag animal.animal_intro_avatar, class: "img-responsive" %>
      <% end %>
      <h5><%= animal.animalName %></h5>
    </div>
  <% end %>
</div>
